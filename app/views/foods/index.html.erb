<p style="color: green"><%= notice %></p>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h1>Foods</h1>
    </div>
    <div class="col">
      <%= link_to "Add Food", new_food_path %>
    </div>
  </div>
  <div id="foods">
    <% @foods.each do |food| %>
      <%= render food %>
      <p>
        <%= link_to "Show this food", food %>
      </p>
    <% end %>
  </div>
